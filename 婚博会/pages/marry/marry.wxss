.xuanchuanImg{
  width: 100%;
  height: 220px;
}
.ticket{
  display: flex;
  width: 100%;
  text-align: center;
  margin-bottom: 30px;
}
.first,.second{
  width: 45%;
  height: 35px;
  line-height: 35px;
  font-size: 14px;
  color: #ffffff;
  background-color: #d60210;
  margin: 0 auto;
}
.second{
  background-color: #fda6ae;
}
icon{
  position:relative;
  top:4px;
  margin-right: 6px;
}
.item{
  margin: 10px;
  display: flex;
}
.name{
  width: 25.8%;
  height: 28px;
  line-height: 28px;
  font-size: 15px;
  text-align: right;
}
.val{
  width: 230px;
  height: 28px;
  font-size: 13px;
  border: 1px solid #ccc;
  border-radius: 5px;
}
.val input{
  height: 30px;
}
.holder{
  color: #999999;
  font-size: 13px;
  margin-left: 5px;
  /* line-height: 30px; */
}
.box{
  font-size: 13px;
  width: 230px;
  /* margin-left: 10px; */
}
.box checkbox{
  margin-top: 10px;
  /* margin-left: 10px; */
}
.btn{
  width: 220px;
  height: 45px;
  line-height: 45px;
  color: #ffffff;
  background-color: #d50310;
  border-radius: 50px;
}
.way{
  width: 223px;
  height: 30px;
  font-size: 13px;
  text-align: left;
}
.bg{
  display: block;
  width: 100%;
  height: 750px;
  position: absolute;
  top: 0;
  left: 0;
  z-index: 999;
  background-color: #ccc;
  opacity: 0.9;
}
.hideBg{
  display: none;
}
.radioBg{
  width: 80%;
  height: 500px;
  background-color: #fff;
  margin: 0 auto;
  margin-top: 20px;
}
.radioItem{
  display: flex;
  height: 50px;
  align-items: center;
  border-bottom: 1px solid #ccc;
}
.radioName{
  width: 90%;
}