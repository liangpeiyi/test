/* pages/trainList/trainList.wxss */
.font-16{
  font-size: 16px;
}
.date{
  height:40px;
  background-color: #5495E6;
  display: flex;
}
.date view{
  margin: 0 auto;
  color: #fff;
  padding-top: 10px;
}
.content{
  height: 600px;
  background-color: #f4f4f4;
  padding-top: 10px;
}
.bg{
  width: 95%;
  height:90px;
  background-color: #fff;
  margin: 0 auto;
  border-radius: 5px;
  margin-bottom: 10px;
}
.item{
  display: flex;
  padding: 10px;
}
.wrApper{
  width: 25%;
}
.left{
  text-align: left;
}
.center{
  text-align: center;
}
.right{
  text-align: right;
}
.normal{
  color: #000;
  font-weight: bold;
  font-size: 16px;
}
.blue{
  color: #5494E6;
  font-weight: bold;
}
.small{
  font-size: 13px;
  color: #666;
}
.line{
  height: 1px;
  background-color: rgb(90, 90, 90);
  opacity: 0.2;
  width: 100%;
  /* margin: 0 auto; */
  margin-top: 3px;
  margin-bottom: 3px;
}
.buy{
  background-color: red;
  width: 42px;
  height: 20px;
  line-height: 20px;
  font-size: 12px;
  color: #fff;
  text-align: center;
  float: right;
  border-radius: 20px;
  margin-right: 5px;
}
.hr{
  height:1px;
  background-color: #ccc;
  opacity: 0.2;
}
.seat{
  font-size: 13px;
  display: flex;
  margin-top: 5px;
  margin-left: 10px;
}
.seat text{
  color: red;
}
.no{
  color: #999;
  margin-right: 10px;
}
.yes{
  margin-right: 10px;
}
.bottomNav{
  background-color: #505963;
  display: flex;
  height:45px;
  line-height: 45px;
  position: fixed;
  bottom: 0;
  width: 100%;
}
.bottomNav view{
  margin: 0 auto;
}
.selected{
  font-size: 13px;
  color: #5495E5;
}
.common{
  font-size: 13px;
  color: #fff;
}